<?xml version="1.0" encoding="UTF-8"?>
<!-- Updated by PanXiaotan -->
<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<ThresholdFilter level="error" onMatch="ACCEPT"
				onMismatch="DENY" />
			<PatternLayout charset="UTF-8"
				pattern="%-d{HH:mm:ss,SSSS} [%-5p][%m][%-F:%L][%-5c] %n" />
		</Console>
		<RollingFile name="DEBUG_LOG"
			fileName="./logs/monitor_system_debug.log" immediateFlush="true"
			filePattern="./logs/${date:yyyy-MM-dd}/debug_%d{yyyy-MM-dd}-%i.log"
			append="true">
			<Filters>
				<ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
				<ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY" />
			</Filters>
			<PatternLayout charset="UTF-8"
				pattern="%-d{HH:mm:ss,SSSS} [%-5p][%-X{ThreadName}][%m][%-F:%L][%-5c] %n" />
			<SizeBasedTriggeringPolicy size="100MB" />
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		<RollingFile name="INFO_LOG"
			fileName="./logs/monitor_system_info.log" immediateFlush="false"
			filePattern="./logs/${date:yyyy-MM-dd}/info_%d{yyyy-MM-dd}-%i.log"
			append="true">
			<Filters>
				<ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
				<ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY" />
			</Filters>
			<PatternLayout charset="UTF-8"
				pattern="%-d{HH:mm:ss,SSSS} [%-5p][%-X{ThreadName}][%m][%-F:%L][%-5c] %n" />
			<SizeBasedTriggeringPolicy size="100MB" />
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		<RollingFile name="ERROR_LOG"
			fileName="./logs/monitor_system_error.log" immediateFlush="false"
			filePattern="./logs/${date:yyyy-MM-dd}/error_%d{yyyy-MM-dd}-%i.log"
			append="true">
			<ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout charset="UTF-8"
				pattern="%-d{HH:mm:ss,SSSS} [%-5p][%-X{ThreadName}][%m][%-F:%L][%-5c] %n" />
			<SizeBasedTriggeringPolicy size="100MB" />
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		<Async name="ASYNC_INFO_LOG">
			<AppenderRef ref="INFO_LOG" />
		</Async>
	</Appenders>
	<Loggers>
		<root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="DEBUG_LOG" />
			<AppenderRef ref="INFO_LOG" />
			<AppenderRef ref="ERROR_LOG" />
		</root>
	</Loggers>
</Configuration>